<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/textContactDetailsHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Contact Details:"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/textLinkedIn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="LinkedIn: empowering.the.nation24"
        android:textSize="16sp"
        android:autoLink="web"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textContactDetailsHeader"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/textInstagram"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Instagram:"
        android:textSize="16sp"
        android:autoLink="web"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textLinkedIn"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/textFacebook"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Facebook: empowering.the.nation24"
        android:textSize="16sp"
        android:autoLink="web"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textInstagram"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/textPhone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Phone Number: +27 12 345 6789"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textFacebook"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/textEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Email: empoweringnationstoday@gmail.com"
        android:textSize="16sp"
        android:autoLink="web"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textPhone"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/textLocationsHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Locations:"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textEmail"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/textLocation1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Sandton\nWaterstone Drive, Benmore Rd, Sandton, 2196\n"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textLocationsHeader"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/textLocation2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Westville\nLink Road St James Avenue and, Link Rd, Westville, Durban, 3630\n"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textLocation1"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/textLocation3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Cape Town\nThe Quadrant, 146 Campground Rd, Newlands, Cape Town, 7708"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textLocation2"
        android:layout_marginBottom="16dp" />

    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/textLocation3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnBackToHome"
        android:layout_marginTop="16dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnBackToHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back to Home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="@color/black"
        app:cornerRadius="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>