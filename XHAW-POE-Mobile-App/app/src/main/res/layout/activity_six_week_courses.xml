<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/titleSixWeekCourses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Six Week Courses"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="16dp" />

            <!-- Child Minding Section -->
            <TextView
                android:id="@+id/headingChildMinding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Child Minding"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingBottom="8dp"
                android:background="@color/black"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/labelFeesChildMinding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fees:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/feesChildMinding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R750"
                android:paddingBottom="8dp" />

            <TextView
                android:id="@+id/labelPurposeChildMinding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Purpose:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/purposeChildMinding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="To provide basic child and baby care"
                android:paddingBottom="8dp" />

            <TextView
                android:id="@+id/labelContentChildMinding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Content:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/contentChildMinding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Birth to six-month old baby needs\nSeven-month to one year old needs\nToddler needs\nEducational toys"
                android:paddingBottom="16dp" />

            <ImageView
                android:id="@+id/imageChildMinding"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:src="@drawable/childminding"
                android:contentDescription="Child Minding Image"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="16dp" />

            <!-- Cooking Section -->
            <TextView
                android:id="@+id/headingCooking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cooking"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingBottom="8dp"
                android:background="@color/black"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/labelFeesCooking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fees:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/feesCooking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R750"
                android:paddingBottom="8dp" />

            <TextView
                android:id="@+id/labelPurposeCooking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Purpose:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/purposeCooking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="To prepare and cook nutritious family meals"
                android:paddingBottom="8dp" />

            <TextView
                android:id="@+id/labelContentCooking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Content:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/contentCooking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nutritional requirements for a healthy body\nTypes of protein, carbohydrates, and vegetables\nPlanning meals\nPreparation and cooking of meals"
                android:paddingBottom="16dp" />

            <ImageView
                android:id="@+id/imageCooking"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:src="@drawable/cooking"
                android:contentDescription="Cooking Image"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="16dp" />

            <!-- Garden Maintenance Section -->
            <TextView
                android:id="@+id/headingGardenMaintenance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Garden Maintenance"
                android:textSize="20sp"
                android:textStyle="bold"
                android:paddingBottom="8dp"
                android:background="@color/black"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/labelFeesGardenMaintenance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fees:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/feesGardenMaintenance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R750"
                android:paddingBottom="8dp" />

            <TextView
                android:id="@+id/labelPurposeGardenMaintenance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Purpose:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/purposeGardenMaintenance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="To provide basic knowledge of watering, pruning, and planting in a domestic garden"
                android:paddingBottom="8dp" />

            <TextView
                android:id="@+id/labelContentGardenMaintenance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Content:"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/contentGardenMaintenance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Water restrictions and watering requirements of indigenous and exotic plants\nPruning and propagation of plants\nPlanting techniques for different plant types"
                android:paddingBottom="16dp" />

            <ImageView
                android:id="@+id/imageGardenMaintenance"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:src="@drawable/gardenmaintenance"
                android:contentDescription="Garden Maintenance Image"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="16dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBackToHome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Back to Home"
                android:backgroundTint="@color/black"
                app:cornerRadius="0dp"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>