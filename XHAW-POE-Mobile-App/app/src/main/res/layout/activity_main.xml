<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding = "20dp"
    android:background="@color/white">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSixMonthCourses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="6-Month Courses"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/black"
        app:cornerRadius="0dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSixWeekCourses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="6-Week Courses"
        app:layout_constraintTop_toBottomOf="@+id/btnSixMonthCourses"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/black"
        app:cornerRadius="0dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCalculateFees"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculate Fees"
        app:layout_constraintTop_toBottomOf="@+id/btnSixWeekCourses"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/black"
        app:cornerRadius="0dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnContact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contact Us"
        app:layout_constraintTop_toBottomOf="@+id/btnCalculateFees"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/black"
        app:cornerRadius="0dp"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="308dp"
        android:layout_height="331dp"
        android:contentDescription="My Image"
        android:src="@drawable/logo"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="297dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>